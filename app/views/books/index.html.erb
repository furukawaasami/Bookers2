<h3>User info</h3>
<p><%= image_tag @user.get_profile_image(100,100) %></p>
<%= @user.name %>
<%= @user.introduction %>
<%= link_to "Edit Profile", edit_user_path(current_user.id) %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

<h4>タイトル</h4>
<%= f.text_field :title %>

 <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

<% end %>


<h4>投稿一覧</h4>
<% @books.each do |book| %>
　<p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p>タイトル</p>
  <span><%=link_to book.title, book_path(book.id) %> </span>
  <p>Opinion</p>
  <%= book.body %>


  <% end %>