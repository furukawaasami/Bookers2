<h3>User info</h3>

<%= @user.name %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>

<h4>タイトル</h4>
<%= f.text_field :title %>

 <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

<% end %>


<h4>投稿一覧</h4>
<% @books.each do |book| %>

  <p1>タイトル</p1>
  <span><%=link_to book.title, book_path(book.id) %> </span>
  <%= book.body %>


  <% end %>